<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.FoodActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Diary"
        android:textColor="@color/colorBrown"
        android:textSize="20dp"
        android:layout_marginLeft="110dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:padding="20dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/textView_breakfast2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Breakfast:"
        android:padding="20dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/textView_lunchy2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lunch:"
        android:padding="20dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/textView_snacky2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Snacks:"
        android:padding="20dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/textView_sapa2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Supper:"
        android:padding="20dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp" />

    <Button
        android:id="@+id/button_btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:text="Go back"/>

</LinearLayout>