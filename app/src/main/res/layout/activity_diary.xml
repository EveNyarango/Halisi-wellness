      <TableLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/table"
          android:layout_margin="20dp">

<!--      heading-->
    <TableRow
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Meal "
            android:textColor="@color/white"
            android:padding="10sp"
            android:textSize="14sp"
            android:layout_weight="4"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Meal Time "
            android:textColor="@color/white"
            android:padding="10sp"
            android:textSize="14sp"
            android:layout_weight="4"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Specific Food "
            android:textColor="@color/white"
            android:padding="10sp"
            android:textSize="14sp"
            android:layout_weight="4"
            android:gravity="center_horizontal"/>
    </TableRow>

<!--          data-->

          <TableRow>

              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="Breakfast"
                  android:padding="10sp"
                  android:textSize="14sp"
                  android:layout_weight="4"
                  android:gravity="center_horizontal"/>


                  <ImageView
                      android:id="@+id/break1"
                      android:layout_width="120dp"
                      android:layout_height="120dp"
                      android:layout_alignParentRight="true"
                      android:layout_centerHorizontal="true"
                      android:paddingBottom="50dp"
                      android:layout_marginTop="20dp"
                      android:src="@drawable/break1" />


              <EditText
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:padding="10sp"
                  android:textSize="14sp"
                  android:hint="Enter meal"
                  android:layout_weight="4"
                  android:gravity="center_horizontal"/>
          </TableRow>

<!--          2nd-->
          <TableRow>

              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="Lunch Time"
                  android:padding="10sp"
                  android:textSize="14sp"
                  android:layout_weight="4"
                  android:gravity="center_horizontal"/>

              <ImageView
                  android:id="@+id/lunch"
                  android:layout_width="120dp"
                  android:layout_height="120dp"
                  android:layout_alignParentRight="true"
                  android:layout_centerHorizontal="true"
                  android:paddingBottom="50dp"
                  android:layout_marginTop="20dp"
                  android:src="@drawable/lunch" />

              <EditText
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:hint="Enter Meal"
                  android:padding="10sp"
                  android:textSize="14sp"
                  android:layout_weight="4"
                  android:gravity="center_horizontal"/>
          </TableRow>

<!--          3rd-->
          <TableRow>

              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="Supper Time"
                  android:padding="10sp"
                  android:textSize="14sp"
                  android:layout_weight="4"
                  android:gravity="center_horizontal"/>

              <ImageView
                  android:id="@+id/sapa"
                  android:layout_width="120dp"
                  android:layout_height="120dp"
                  android:layout_alignParentRight="true"
                  android:layout_centerHorizontal="true"
                  android:paddingBottom="50dp"
                  android:layout_marginTop="20dp"
                  android:src="@drawable/sapa" />

              <EditText
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:hint="Enter meal"
                  android:padding="10sp"
                  android:textSize="14sp"
                  android:layout_weight="4"
                  android:gravity="center_horizontal"/>
          </TableRow>

<!--          last-->
          <TableRow>

              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="Snack Time"
                  android:padding="10sp"
                  android:textSize="14sp"
                  android:layout_weight="4"
                  android:gravity="center_horizontal"/>
              <ImageView
                  android:id="@+id/snack"
                  android:layout_width="120dp"
                  android:layout_height="120dp"
                  android:layout_alignParentRight="true"
                  android:layout_centerHorizontal="true"
                  android:paddingBottom="50dp"
                  android:layout_marginTop="20dp"
                  android:src="@drawable/snacks" />

              <EditText
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="Enter snacks"
                  android:padding="10sp"
                  android:textSize="14sp"
                  android:layout_weight="4"
                  android:gravity="center_horizontal"/>
          </TableRow>

      </TableLayout>

    <Button
        android:id="@+id/Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:textColor="@color/white"/>


